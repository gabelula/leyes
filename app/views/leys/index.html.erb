<%- model_class = Ley -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Leyes' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:numero) %></th>
      <th><%= model_class.human_attribute_name(:fecha) %></th>
      <th><%= model_class.human_attribute_name(:titulo) %></th>
      <th><%= model_class.human_attribute_name(:texto) %></th>
      <th><%= model_class.human_attribute_name(:legislatura) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @leys.each do |ley| %>
      <tr>
        <td><%= link_to ley.numero, ley_path(ley) %></td>
        <td><%= ley.fecha %></td>
        <td><%= ley.titulo %></td>
        <td><%= ley.texto %></td>
        <td><%= ley.legislatura %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ley_path(ley), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ley_path(ley),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ley_path,
            :class => 'btn btn-primary' %>
